<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <fragment android:name="edu.umsl.proj1.kyu.volleyProject.SelectionFragment"
        android:id="@+id/selectionFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment android:name="edu.umsl.proj1.kyu.volleyProject.SplashFragment"
        android:id="@+id/splashFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment android:name="edu.umsl.proj1.kyu.volleyProject.UserSettingsFragment"
        android:id="@+id/userSettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>